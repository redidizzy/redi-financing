<h1>My friends</h1>

<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_tag search_friends_path, method: :get, remote: true do %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-9 pr-0">
          <%= text_field_tag :keyword, params[:keyword], placeholder: "Name or email", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 pl-0">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon "search 2x" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="results">

</div>

<%= render 'friends/list' %>